dummy <- data.frame(x = c(0,10), y = c(0, 10))
fruit_g <- create_grob_from_png_dir(
    sprintf(
        "EnTICE3_2/Health Compared to Ideal Cloverleaf/%s/%s_Fruit Veg %s.png",
        stri_trans_totitle(config_pt_language),
        convert_language_single(config_pt_language),
        config_pt_cloverleaf_fruit
    ))
mental_g <- create_grob_from_png_dir(
    sprintf(
        "EnTICE3_2/Health Compared to Ideal Cloverleaf/%s/%s_Mental Health %s.png",
        stri_trans_totitle(config_pt_language),
        convert_language_single(config_pt_language),
        config_pt_cloverleaf_mental
    ))
overall_g <- create_grob_from_png_dir(
    sprintf(
        "EnTICE3_2/Health Compared to Ideal Cloverleaf/%s/%s_Overall Health %s.png",
        stri_trans_totitle(config_pt_language),
        convert_language_single(config_pt_language),
        config_pt_cloverleaf_overall
    ))
physical_g <- create_grob_from_png_dir(
    sprintf(
        "EnTICE3_2/Health Compared to Ideal Cloverleaf/%s/%s_Physical Activity %s.png",
        stri_trans_totitle(config_pt_language),
        convert_language_single(config_pt_language),
        config_pt_cloverleaf_physical
    ))
ideal_g <- create_grob_from_png_dir(
    sprintf(
        "EnTICE3_2/Health Compared to Ideal Cloverleaf/%s/%s_Ideal.png",
        stri_trans_totitle(config_pt_language),
        convert_language_single(config_pt_language)
    ))
